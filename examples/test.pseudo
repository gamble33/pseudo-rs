PROCEDURE Main
    OUTPUT "Printing all prime numbers up to 1000"

    DECLARE Counter : INTEGER
    Counter <- 2
    WHILE Counter <= 1000
        IF IsPrime(Counter) THEN
            OUTPUT Counter
        ENDIF
        Counter <- Counter + 1
    ENDWHILE
ENDPROCEDURE


FUNCTION IsPrime(Number : INTEGER) RETURNS BOOLEAN
    DECLARE Counter : INTEGER
    Counter <- 2
    WHILE Counter < Number
        IF CheckDivisible(Number, Counter) THEN
            RETURN FALSE
        ENDIF
        Counter <- Counter + 1
    ENDWHILE
    RETURN TRUE
ENDFUNCTION


FUNCTION CheckDivisible(Number : INTEGER, Divisor : INTEGER) RETURNS BOOLEAN
    DECLARE Counter : INTEGER

    IF Divisor > Number THEN
        RETURN FALSE
    ENDIF

    Counter <- 0
    WHILE Counter < Number
        Counter <- Counter + Divisor
    ENDWHILE

    RETURN Counter = Number
ENDFUNCTION
